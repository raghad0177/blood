@model BloodBankPR.Models.DonationRequest;
@{
    Layout = "_LayoutUser";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page body start -->
            <div class="page-body">
                <a asp-action="Index" class="btn waves-effect waves-light btn-primary btn-outline-primary" style="margin:8px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5ZM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5Z" />
                    </svg>Back
                </a>
                <div class="col-2"></div>
                <div class="col-8 offset-2">
                    <div class="card">
                        <div class="card-header">
                            <h5>Send Your Donation</h5>
                            <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                        </div>
                        
                        <div class="card-block">
                            <form class="form-material" asp-action="Donate" method="post">
                                <input name="id" value="@Model.Book" hidden readonly>
                                <div class="form-group form-default form-static-label">
                                    <input type="number" name="qtn" class="form-control" pattern="[0-9]" min="0" placeholder="Enter Quantity" required="">
                                    <span class="form-bar"></span>
                                    <label class="float-label">Provided Qtn</label>
                                </div>

                                <div class="form-group form-default form-static-label">
                                    <input type="date" name="date" min="2023-04-04" class="form-control" placeholder="Enter User Name" required="">
                                    <span class="form-bar"></span>
                                    <label class="float-label">Donation Will Done At</label>
                                </div>

                                <button type="submit" class="btn btn-primary btn-round waves-effect waves-light" style="text-align:center;margin-left:280px;">
                                    Save
                                </button>

                                <a asp-action="Index" class="btn btn-danger btn-round waves-effect waves-light" style="text-align:center;margin-left:80px;">
                                    Cancel
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>