@model IEnumerable<BloodBankPR.Models.DonationRequestDetails>;
@{

    Layout = "_LayoutUser";

    var list = ViewBag.bloodType as List<BloodBankPR.Models.Book>;
}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Blood Dontion Request </h5>
                        <p class="m-b-0">Display All Donation Request</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                             <a asp-action="Index"> <i class="fa fa-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="DonationRequest">Donation Request</a>
                        </li>
                        <li class="breadcrumb-item">

                        </li>
                    </ul>
                </div>
                <a asp-action="InsertDonationRequest" class="btn waves-effect waves-light btn-success btn-success" style="margin:8px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                    </svg>Insert Donation Request
                </a>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-body start -->
                
                    <!-- Basic table card start -->
                    <div class="card">
                        <div class="card-header">

                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>
                                    @*<li><i class="fa fa-trash close-card"></i></li>*@
                                </ul>
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Requester Name</th>
                                            <th>Required Copy</th>
                                            <th>Book Name</th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@item.DonationRequests.Book</th>
                                                <td>@item.User.Name</td>
                                                
                                                <td>@item.Book.BookName</td>
                                               
                                                @if(item.DonationRequests.IsApproved == true) { 
                                            <td>
                                                <a asp-action="Donations" asp-route-id="@item.DonationRequests.Book" class="btn waves-effect waves-light btn-primary btn-outline-primary"><i class="icofont icofont-eye-alt"></i>Details</a>
                                            </td>
                                                }
                                                
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
                <!-- Page-body end -->
            </div>
        </div>
        <!-- Main-body end -->

        <div id="styleSelector">
        </div>
    </div>
</div>
