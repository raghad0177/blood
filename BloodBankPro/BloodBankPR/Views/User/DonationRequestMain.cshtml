@model IEnumerable<BloodBankPR.Models.DonationRequestJoinDTO>;
@{
    Layout = "_Layout2";
}
<!-- Start Blog  -->
<div class="latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Donation Request</h1>
                    <p>Latest Request For Books Donations</p>
                   
                </div>
            </div>
           
        </div>
        <div class="row">
           
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="~/Bloods/request.jpeg" alt="" style="width:100%; height:180px;" />
                        </div>
                        <div class="blog-content">
                            <div class="title-blog">
                                <h3>Request From @item.User.Name</h3>
                               
                               
                              
                               
                            </div>
                            <br />
                            <br />
                            <input type="text" value="http://localhost:43883/User/MainContent" id="myInput" hidden>
                            <ul class="option-blog">


                               
                                <!---------------------->

                                <li style="width:50px; padding:15px; margin-left:10px; margin-right:10px;">
                                    <button title="Share" onclick="myFunction()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-share" viewBox="0 0 16 16">
                                            <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z" />
                                        </svg>
                                    </button>
                                </li>
                                <script>
                                    function myFunction() {
                                        // Get the text field
                                        var copyText = document.getElementById("myInput");

                                        // Select the text field
                                        copyText.select();
                                        copyText.setSelectionRange(0, 99999); // For mobile devices

                                        // Copy the text inside the text field
                                        navigator.clipboard.writeText(copyText.value);

                                        // Alert the copied text
                                        alert("Copied the text: " + copyText.value);
                                    }
                                </script>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Blog  -->