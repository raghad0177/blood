@model List<BloodBankPR.Models.Book>;
@{
    var list = ViewBag.errors as List<string>;
}
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }
    </style>

    <!-- Jumbotron -->
    <div class="container" style="margin-top:25px;">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Sign up now</h2>
                        <form asp-action="Register" method="post">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example1" style="float:left;">First name</label>
                                        <input type="text" id="form3Example1" class="form-control" required name="fname" />

                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example2" style="float:left;">Last name</label>
                                        <input type="text" id="form3Example2" class="form-control" required name="lname" />

                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example3" style="float:left;">Email address </label>
                                <input type="email" id="form3Example3" class="form-control" required name="email" />

                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example4" style="float:left;">Password</label>
                                <input type="password" id="form3Example4" class="form-control" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!-\/]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" />

                            </div>     

                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example4" required style="float:left;">Birth Date</label>
                                <input type="date" id="datePickerId" class="form-control" name="birthDate" max="" />

                            </div>
                            <script>
                                datePickerId.max = new Date("2004-01-01").toISOString().split("T")[0];
                                datePickerId.max = new Date("2004-01-01").toLocaleDateString('fr-ca')
                            </script>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example4" style="float:left;">Address</label>
                                <input type="text" id="form3Example4" class="form-control" name="address" />

                            </div>

                            

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-danger btn-block mb-4">
                                Sign up
                            </button>
                            @foreach (var item in list)
                            {
                                <p class="text-danger">@item</p>
                            }
                            <a asp-action="SignIn" style="float:left">Already Have Account ? </a>

                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/Bloods/register.jpg" 
                     alt="" style="height:350px;width:300px" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->